@{
    ViewData["Title"] = "Search";
    var allMakers = ViewData["allMakers"] as List<string>;
    var allTypes = ViewData["allTypes"] as List<ExtraInfo.CarTypes>;

}

<h1>Search</h1>

    <form asp-controller="Cars" asp-action="SearchResults" method="get">
        <div class="form-group">
            <label for="minPrice" class="control-label">Minimum Price</label>
            <input name="minPrice" class="form-control" value="0" />
        </div>
        <div class="form-group">
            <label for="maxPrice" class="control-label">Maximum Price</label>
            <input name="maxPrice" class="form-control" value="1000000"/>
        </div>
        <div class="form-group">
            <label for="maker" class="control-label">Maker</label>
        <select name="maker" class="form-control" >
                <option value="" selected>None</option>
                @foreach (var makerName in allMakers)
                {    
                    <option value="@makerName">@makerName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="model" class="control-label">Model</label>
            <input name="model" class="form-control" value="" />
        </div>
            <div>
            <label for="type" class="control-label">Car Type</label>
            <select name="type" class="form-control" >
                <option value="" selected>None</option>
                @foreach (var typeName in allTypes)
                {
            <option value="@typeName">@typeName.ToString().Replace("_", " ")</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="range" class="control-label">Range</label>
            <input name="range" class="form-control" value=""/>
        </div>
        <div class="form-group">
            <label for="chargeTime" class="control-label">Max Charge time</label>
            <input name="chargeTime" class="form-control" value="" />
        </div>
        <div class="form-group">
            <label for="SortBy" class="control-label">Sort By</label>
            <select name="SortBy" class="form-control">
                <option value="0">Default</option>
                <option value="1">Maker</option>
                <option value="2">Model</option>
                <option value="3">Price: Low to High</option>
                <option value="4">Price: High to Low</option>
                <option value="5">Charge Time</option>
            </select>
        </div>
        <div class="form-group" style="margin-top:10px">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>


<div>
    <a asp-action="Index">Back to List</a>
</div>
